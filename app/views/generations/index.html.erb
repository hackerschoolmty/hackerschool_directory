<div class="page-header">
  <h1>Generaciones</h1>
</div>

<div class="pull-right">
<%= link_to "Nueva Generación",
            new_generation_path,
            :class => 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Fecha de Inicio</th>
      <th>Creado en </th>
      <th>Actualizado en</th>
    </tr>
  </thead>
  <tbody>
    <% @generations.each do |generation| %>
      <tr>
        <td><%= link_to generation.id, generation_path(generation) %></td>
        <td><%= generation.name %></td>
        <td><%= generation.start_date.strftime("%B/%d/%Y") %></td>
        <td><%= generation.created_at.strftime("%B/%d/%Y %H:%M") %></td>
        <td><%= generation.updated_at.strftime("%B/%d/%Y %H:%M") %></td>
        <td>
          <%= link_to "Editar",
                      edit_generation_path(generation), class: 'btn btn-default btn-xs' %>
          <%= link_to "Eliminar",
                      generation_path(generation),
                      :method => :delete,
                      :data => { confirm: "¿Estás seguro?" },
                      :class => 'btn btn-xs btn-danger' %>
          <%= link_to "Cursos",  generation_courses_path(generation) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
